{% if latest_news|length %}


  <section class="latest-news">
  <div class="container">
    <div class="row">

      <div class="col col--4@lrg">
        <p class="h1">Related News.</p>
        <a class="btn" href="/latest-news">View more news <i></i></a>
      </div>

      <div class="col col--6@xl">
        <div class="row">
          {% for news_post in related_posts %}
            {% include "molecules/news-card.twig" with {
              post_info: news_post
            } %}
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</section>

{% endif %}
